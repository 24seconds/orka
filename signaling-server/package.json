{
  "name": "signaling-server",
  "version": "1.0.0",
  "description": "localdrop signaling server",
  "main": "index.js",
  "engines": {
    "node": ">=13.9.0",
    "npm": ">=6.14.1"
  },
  "scripts": {
    "compile": "npx tsc",
    "start": "npx nodemon dist/index.js",
    "start:dev": "npx nodemon dist/index.js",
    "build:dev": "npx tsc --watch --preserveWatchOutput",
    "dev": "concurrently \"npm:build:dev\" \"npm:start:dev\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "check": "npx eslint --ext .ts src/",
    "fix-lint": "npx eslint --fix --ext .ts src/",
    "build": "npx tsc",
    "postinstall": "npm run compile",
    "deploy:heroku": "git subtree push --prefix signaling-server heroku main",
    "deploy:heroku:dev": "git subtree push --prefix signaling-server heroku server-test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.5",
    "@types/ws": "^7.2.4",
    "express": "^4.17.1",
    "typescript": "^3.9.2",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "nodemon": "^2.0.4"
  }
}
